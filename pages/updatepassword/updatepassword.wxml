<!--pages/updatepassword/updatepassword.wxml-->
<view class="blank"></view>
<view class="view-contain-ti" >
    <text class="text-ti">请输入当前登录密码</text>
    <input class="input1" password value="{{password}}" bindinput="passwordInput"></input>
</view>
<view class="view-contain-ti">
    <text class="text-ti">新密码</text>
    <input class="input1" password value="{{newpassword}}" bindinput="newPasswordInput"></input>
</view>
<view class="view-contain-ti">
    <text class="text-ti">重复密码</text>
    <input class="input1" password value="{{repassword}}" bindinput="rePasswordInput"></input>
</view>
<view class="tip">！必须是6-20个英文字母、数字或符号组成</view>
<view class="blank"></view>
<view class="viewName" style="width: 70%;margin-left: 15%;">
  <button class="loginBtn"  bindtap="update" >修改</button>
  <button class="resetBtn" bindtap="resetBtnClick">清除</button>
</view>
